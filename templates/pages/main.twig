{% extends "base.twig" %}

{% block content %}


{#
—————————————————————————————————————————————————————————————————————————
 Splash Image
—————————————————————————————————————————————————————————————————————————
#}

<div class="splash-image"></div>





{#
—————————————————————————————————————————————————————————————————————————
 Latest
—————————————————————————————————————————————————————————————————————————
#}
<section>

    <div class="latest">
        <h1 class="section-title">Latest</h1>
        <div class="music-player">
            <h2 class="center-text">Music</h2>
            <div>
                <iframe width="100%" height="80%" scrolling="no" frameborder="no" class="float-left" src="https://www.reverbnation.com/widget_code/html_widget/artist_648727?widget_id=55&pwc[included_songs]=1&context_type=page_object" style="width:0px;min-width:100%;max-width:100%;"></iframe>
            </div>
        </div>


        <div class="news">
            <h2 class="center-text">News</h2>

            <div class="blog-posts">
                {% for post in blogs %}
                    <h2><a href="{{ post.link }}">{{ post.title }}</a></h2>
                    <p>{{ post.get_preview }}</p>
                {% endfor %}
            </div>

        </div>
    </div>

</section>

{#
—————————————————————————————————————————————————————————————————————————
 Events
—————————————————————————————————————————————————————————————————————————
#}

<section>

<div class="media">

    <div class="gallery">
        <h1 class="section-title white">Gallery</h1>
            <div class="pic-thumbs">
                {% for post in posts %}
                    {% for item in post.get_field("images_gallery") %}
                        <img src="{{TimberImage(item.band_image).src|resize(640)}}" />
                    {% endfor %}
                {% endfor %}
            </div>
    </div>

    <div class="video">
        <h1 class="section-title white">Videos</h1>
        <div class="youtube">
            <iframe class="container youtube" width="1300" height="700" src="https://www.youtube.com/embed/MKFpmiBXSjw" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>

</section>
</div>

{#
—————————————————————————————————————————————————————————————————————————
 Videos
—————————————————————————————————————————————————————————————————————————
#}






{#
—————————————————————————————————————————————————————————————————————————
 Qoutes
—————————————————————————————————————————————————————————————————————————
#}
<section>
    <div class="quotes">

        {% for post in posts %}
            {% for item in post.get_field("quotes") %}
                <div class="quote">
                    <blockquote>
                        "{{item.quote}}"
                    </blockquote>
                    <h3 class="right-text">- {{item.author}} </h3>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</section>



{% endblock content%}
