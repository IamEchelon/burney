{% extends "base.twig" %}

{% block content %}

<div class="blog-wrapper">
    <h1 class="section-title">Blog</h1>

    <div class="blog-posts">
        {% for post in posts %}
            {% if post.thumbnail %}
                <img src="{{post.thumbnail.src|resize(800)}}" />
            {% endif %}
            <h2><a href="{{ post.link }}">{{ post.title }}</a></h2>
            <p>{{ post.get_preview }}</p>
        {% endfor %}
    </div>

</div>

{% endblock %}
