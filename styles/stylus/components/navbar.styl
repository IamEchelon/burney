// navbar typography



// dimensions
.navbar
    min-height 85px



// display



// positioning

.navbar
    box-sizing border-box

// styling



// behavior


.navbar
    navbarAnim()

    ul
        list-style none
        padding 2rem
        transition 0.35s all ease

.scrolled
    min-height 10px
    background offblack
    transition 0.35s all ease


    ul
        padding 0.5rem
        transition 0.35s all ease

nav a,li
        clearStyling()
        color white
        margin 0 .5em

.nav-wrapper li
    position relative
    display inline-block

.topBotomBordersOut
    display block
    padding .50em

.topBotomBordersOut:before, .topBotomBordersOut:after
    position absolute
    left 0px
    width 100%
    height 2px
    background #FFF
    content ""
    opacity 0
    transition all 0.4s

.topBotomBordersOut:before
    top 0px
    transform translateY(-10px)


.topBotomBordersOut:after
    bottom 0px
    transform: translateY(10px)


.topBotomBordersOut:hover:before, .topBotomBordersOut:hover:after
    opacity 1
    transform translateY(0px)
