// typography dimensions display styling behavior

/*
—————————————————————————————————————————————————————————————————————————
 Elements
—————————————————————————————————————————————————————————————————————————
*/

nav
    background-color: #000

    padding: 0 2em

    a,li

        // —————————————————————— Dimensions ——————————————————————

        margin: 0 .5em

        // —————————————————————— Styling —————————————————————————

        clearStyling()

        color: white


    &.sample-page
        background-color: transparent


/*
—————————————————————————————————————————————————————————————————————————
 Classes
—————————————————————————————————————————————————————————————————————————
*/

.navbar

    // ————————————————————————— Dimensions ————————————————————————

    min-height 70px

    // ————————————————————————— Display ———————————————————————————

    box-sizing border-box


    // ————————————————————————— Behavior ——————————————————————————

    navbarAnim()



    ul

        // ————————————————————— Dimensions ————————————————————————

        padding 1rem 0rem

        // —————————————————————— Behavior ——————————————————————————

        transition 0.35s all ease



.scrolled

    // ————————————————————————— Dimensions ————————————————————————

    min-height 7px

    // ————————————————————————— Styling ———————————————————————————

    background-color: #000 !important;

    // ————————————————————————— Behavior ——————————————————————————

    transition 0.35s all ease



    ul

        // —————————————————————— Dimensions ————————————————————————

        padding 0.4rem 0rem


        // —————————————————————— Behavior ——————————————————————————

        transition 0.35s all ease



.nav-wrapper

    li

    // ————————————————————————— Display ———————————————————————————

        position relative

        display inline-block



.topBotomBordersOut

    // ————————————————————————— Display ———————————————————————————

    display block

    // ————————————————————————— Dimensions ————————————————————————

    padding .50em

    // ————————————————————————— Typography ————————————————————————

    text-transform: uppercase



.topBotomBordersOut:before, .topBotomBordersOut:after

    // ————————————————————————— Display ———————————————————————————

    position absolute

    left 0px

    // ————————————————————————— Dimensions ————————————————————————

    width 100%

    height 2px

    // ————————————————————————— Styling ———————————————————————————

    background #FFF

    content ""

    opacity 0

    // ————————————————————————— Behavior ——————————————————————————

    transition all 0.4s



.topBotomBordersOut:before

    // ————————————————————————— Display ———————————————————————————

    top 0px

    // ————————————————————————— Behavior ——————————————————————————

    transform translateY(-10px)



.topBotomBordersOut:after

    // ————————————————————————— Display ———————————————————————————

    bottom 0px

    // ————————————————————————— Behavior ——————————————————————————

    transform: translateY(10px)



.topBotomBordersOut:hover:before, .topBotomBordersOut:hover:after

    // ————————————————————————— Styling ———————————————————————————

    opacity 1

    // ————————————————————————— Behavior ——————————————————————————

    transform translateY(0px)
