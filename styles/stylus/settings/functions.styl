/*
–––––––––––––––––––––––––––––––––––––––––––––––
 Imports
–––––––––––––––––––––––––––––––––––––––––––––––
*/

@import url('https://fonts.googleapis.com/css?family=Open+Sans|Roboto:300,400|Shrikhand')
@import '../../node_modules/jeet/styl/'

/*
–––––––––––––––––––––––––––––––––––––––––––––––
 Display
–––––––––––––––––––––––––––––––––––––––––––––––
*/

container( $value = 80% )
    margin auto
    max-width $value

fill-view( $height = false, $width = false)
    if $height
        height 100vh
    if $width
        width 100vw

flex( $direction = row, $flexWrap = inherit, $justify = space-around, $align = center, $content = inherit )
    display flex
    flex-direction $direction
    flex-wrap: $flexWrap;
    justify-content $justify
    align-items $align
    align-content $content


/*
–––––––––––––––––––––––––––––––––––––––––––––––
 Images
–––––––––––––––––––––––––––––––––––––––––––––––
*/

poster( $image )
    background-image: url( $image );
    height: 100vh;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

parallax( $image, $height = 100vh )
    background-image url( $image )
    min-height $height
    background-attachment fixed
    background-position center
    background-repeat no-repeat


/*
–––––––––––––––––––––––––––––––––––––––––––––––
 Buttons
–––––––––––––––––––––––––––––––––––––––––––––––
*/

ghost-btn( $color = black )
    display: inline-block
    color: $color
    padding: .6em 1.2em
    border: 2px solid $color

roundBorders( $value )
    border-radius: $value

/*
–––––––––––––––––––––––––––––––––––––––––––––––
 Navbar
–––––––––––––––––––––––––––––––––––––––––––––––
*/

navbarAnim()
    position: fixed
    top: 0
    left: 0
    right: 0
    width: 100%
    z-index: 20
    transition: 0.35s all ease

newnavAnim()
    min-height: 85px
    box-sizing: border-box
    position: fixed
    top: 0
    left: 0
    right: 0
    width: 100%
    z-index: 20
    transition: 0.35s all ease

    ul
        padding: 1.5rem 0rem
        transition: 0.35s all ease

    .scrolled
        min-height: 7px
        background: offblack
        transition: 0.35s all ease

        ul
            padding: 0.5rem 0rem
            transition: 0.35s all ease


/*
–––––––––––––––––––––––––––––––––––––––––––––––
 Fonts & Typography
–––––––––––––––––––––––––––––––––––––––––––––––
*/

// base($pixels)


toEm($pixels)
    ($pixels/16)em


font( $family = helvetica, $color = offblack, $size = inherit)
    font-family: $family
    color: $color
    font-size: $size

clearStyling()
    list-style: none
    text-decoration: none

title($size)
    text-align: center
    font-size: $size
    &.white
        color: white

/*
–––––––––––––––––––––––––––––––––––––––––––––––
 Dimensions
–––––––––––––––––––––––––––––––––––––––––––––––
*/

pad($top = 0, $bottom = 0, $left = 0, $right = 0)
    padding-top: toEm($top)
    padding-bottom: toEm($bottom)
    padding-left: toEm($left)
    padding-right: toEm($right)

padAll($pixels)
    padding: toEm($pixels)

marg($top = 0, $bottom = 0, $left = 0, $right = 0)
    margin-top: toEm($top)
    margin-bottom: toEm($bottom)
    margin-left: toEm($left)
    margin-right: toEm($right)

margAll($pixels)
    margin: toEm($pixels)
